<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="~/Content/style1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>

    <div id="wrapper">
        <div id="inner">

            <div id="header">
                <img src="~/images/logo.jpg" style="width:50%" />

                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="http://localhost:61395/BookStore">BOOK STORE</a>
                        </div>
                        <ul class="nav navbar-nav">
                            <li>
                                @Html.ActionLink("TRANG CHỦ", "Index", "BookStore")
                            </li>
                            <li>
                                @Html.ActionLink("Quản lý chủ đề", "Chude", "Admin")
                            </li>
                            @*<li>
                                @Html.ActionLink("Quản lý Nhà xuất bản", "Nhaxuatban", "Admin")
                            </li>*@
                            <li>
                                @Html.ActionLink("Quản lý sách", "Sach", "Admin")
                            </li>
                            <li>
                                @Html.Action("GiohangPartial","Giohang")
                            </li>
                            <li class="nav-item">
                                <a>
                                    @using (Html.BeginForm("Index", "BookStore", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                                    {
                                        <p style="text-align:center">
                                            @Html.TextBox("SearchString")
                                            <input type="submit" value="Tìm kiếm" />
                                        </p>
                                    }
                                </a>
                            </li>
                        </ul>

                    </div>
                </nav>
            </div>
        </div>
        <dl id="browse">
            <dt>@Html.Action("Chude", "BookStore")</dt>
            <dt>@Html.Action("Nhaxuatban", "BookStore")</dt>

        </dl>
        <div class="input-group">
            <div>
                @RenderBody()
            </div>
        </div>
        @*<div>
                <div class="clear"></div>
                <div id="footer">
                    Web design by <a href="http://www.freewebsitetemplates.com">free website templates</a> &nbsp;
                    <div id="footnav"> <a href="http://all-free-download.com/free-website-templates/">Legal</a> | <a href="http://all-free-download.com/free-website-templates/">Home</a> </div>
                </div>
            </div>*@
    </div>
    <br /><br />


</body>
</html>
